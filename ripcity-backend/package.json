{
  "name": "rip-city-backend",
  "version": "1.0.0",
  "description": "Rip City Ticket Dispatch - AI-Powered Portland Trail Blazers & Event Ticket Deal Monitor",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "build:react": "cd ../rip-city-tickets-react && npm ci && npm run build",
    "build:with-frontend": "npm run build:react && npm run build",
    "copy-assets": "cp -r src/public dist/ 2>/dev/null || true",
    "copy-frontend": "cp -r ../rip-city-tickets-react/build dist/frontend 2>/dev/null || true",
    "copy-legal": "cp -r ../legal-site dist/legal-site 2>/dev/null || true",
    "build:full": "npm run build && npm run copy-assets && npm run copy-frontend && npm run copy-legal",
    "scrape": "node dist/scrapers/run-scrapers.js",
    "test": "jest",
    "db:init": "node scripts/init-database.js",
    "db:setup": "npm run db:init"
  },
  "keywords": [
    "tickets",
    "portland",
    "trail-blazers",
    "ticketmaster",
    "deals",
    "ai",
    "alerts"
  ],
  "author": "Joseph Mazzini <joseph@mazzlabs.works>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20.19.0",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.15.4",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.15.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "path": "^0.12.7",
    "pg": "^8.16.0",
    "prisma": "^6.9.0",
    "redis": "^4.6.8",
    "stripe": "^14.25.0",
    "twilio": "^4.19.0",
    "typescript": "^5.8.3",
    "web-push": "^3.6.7",
    "winston": "^3.11.0",
    "zod": "^3.25.61"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
