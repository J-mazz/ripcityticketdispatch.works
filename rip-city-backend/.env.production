# Rip City Ticket Dispatch - Production Environment Variables

# =====================================================
# PRODUCTION CONFIGURATION
# =====================================================

NODE_ENV=production
PORT=3001

# =====================================================
# API KEYS - GET REAL ONES FOR PRODUCTION
# =====================================================

# Ticketmaster API (Required)
# Get from: https://developer.ticketmaster.com/
TICKETMASTER_API_KEY=your_ticketmaster_api_key_here

# StubHub API (Optional - for price comparison)
STUBHUB_CLIENT_ID=your_stubhub_client_id
STUBHUB_CLIENT_SECRET=your_stubhub_client_secret

# SeatGeek API (Optional - for additional inventory)
SEATGEEK_CLIENT_ID=your_seatgeek_client_id

# =====================================================
# DATABASE & CACHING (HEROKU ADD-ONS)
# =====================================================

# Heroku Postgres (for user data, preferences, analytics)
DATABASE_URL=postgres://user:pass@host:port/db

# Heroku Redis (for caching and rate limiting)
REDIS_URL=redis://user:pass@host:port

# =====================================================
# EXTERNAL SERVICES
# =====================================================

# SendGrid (for email alerts)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=alerts@ripcityticketdispatch.works

# Twilio (for SMS alerts)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# =====================================================
# MONITORING & ANALYTICS
# =====================================================

# Datadog (application monitoring)
DD_API_KEY=your_datadog_api_key
DD_APP_KEY=your_datadog_app_key

# Google Analytics (user behavior)
GA_TRACKING_ID=UA-XXXXXXXX-1

# =====================================================
# SECURITY & RATE LIMITING
# =====================================================

# JWT Secret for user authentication
JWT_SECRET=your_super_secure_jwt_secret_here

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (production domains)
CORS_ORIGINS=https://ripcityticketdispatch.works,https://api.ripcityticketdispatch.works

# =====================================================
# BUSINESS LOGIC CONFIGURATION
# =====================================================

# Deal Scoring Thresholds
MIN_SAVINGS_PERCENTAGE=15
HOT_DEAL_THRESHOLD=85
WARM_DEAL_THRESHOLD=70
GOOD_DEAL_THRESHOLD=55

# Monitoring Intervals (in seconds)
TICKET_SCAN_INTERVAL=30
PRICE_CHECK_INTERVAL=300

# Alert Settings
MAX_ALERTS_PER_USER_PER_DAY=50
ALERT_COOLDOWN_MINUTES=15

# =====================================================
# AFFILIATE & REVENUE
# =====================================================

# Affiliate Program IDs
TICKETMASTER_AFFILIATE_ID=your_tm_affiliate_id
STUBHUB_AFFILIATE_ID=your_stubhub_affiliate_id

# Stripe (for premium subscriptions)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =====================================================
# SCALING & PERFORMANCE
# =====================================================

# Worker Process Configuration
WEB_CONCURRENCY=2
WEB_MEMORY=512
WORKER_PROCESSES=1

# Cache TTL (in seconds)
VENUE_CACHE_TTL=86400
EVENT_CACHE_TTL=3600
DEAL_CACHE_TTL=300

# =====================================================
# DEPLOYMENT & CI/CD
# =====================================================

# Heroku App Name
HEROKU_APP_NAME=rip-city-backend

# Bump.sh API Documentation
BUMP_TOKEN=BTHdP8cFVixqSZuVg2wCqruaHQauU1ac
BUMP_DOC_ID=ripcitybitch

# GitHub Repository
GITHUB_REPO=J-mazz/rip-city-ticket-dispatch
