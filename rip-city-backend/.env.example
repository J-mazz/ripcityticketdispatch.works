# Environment Configuration for Heroku
NODE_ENV=production
PORT=3001

# Ticketmaster API Configuration
TICKETMASTER_API_KEY=your_ticketmaster_api_key_here

# Redis Configuration (for caching - Heroku Redis add-on)
REDIS_URL=redis://localhost:6379

# Logging Level
LOG_LEVEL=info

# CORS Origins
CORS_ORIGINS=https://ripcityticketdispatch.works,https://mazzlabs.works

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Deal Scoring Configuration
MIN_SAVINGS_PERCENTAGE=15
HOT_DEAL_THRESHOLD=85
WARM_DEAL_THRESHOLD=70
GOOD_DEAL_THRESHOLD=55

# Monitoring
ENABLE_ANALYTICS=true
WEBHOOK_URL=your_webhook_url_for_alerts
